# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,xml,config}]
max_line_length = off

[*.md]
trim_trailing_whitespace = false
max_line_length = off
